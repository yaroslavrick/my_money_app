.container
  %canvas#myChart{:height => "500px", :style => "display: block; box-sizing: border-box; height: 500px; width: 1140px;", :width => "1140px"}
%script{:src => "https://cdn.jsdelivr.net/npm/chart.js"}
:javascript
  const ctx = document.getElementById('myChart');

  const data = {
      labels: #{raw @dates},
      datasets:[{
          label:'#{t('.money_date')}',
          data: #{@amounts},
          fill: false,
          borderColor: 'rgb(75, 192, 192)',
          tension: 0.1
      }]
  }

  const config = {
      type: 'line',
      data: data,
      options: {
          responsive: true
      },
      plugins: []
  }

  new Chart(ctx, config);
