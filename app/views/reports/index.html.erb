<% require 'date' %>
Reports#index
<p>Find me in app/views/reports/index.html.erb</p>

<h1>Генератор звітів</h1>

<div id="date_from">
  <label for="date_from">Date from: (YYYY-MM-DD)</label>

  <input type="date" id="date_from" name="date-from"
value="<%= Date.yesterday.strftime( '%Y-%m-%d')
%>"
         min="2018-01-01" max="2030-12-31">
</div>

<div id="date_to">
  <label for="date_to">Date to: (YYYY-MM-DD)</label>

  <input type="date" id="date_to" name="date-to"
         value="<%= Date.today.strftime( '%Y-%m-%d')
         %>"
         min="2018-01-01" max="2030-12-31">
</div>

<div>
  <p>Тип операцій</p>

  <select name="operations">
    <option value="expences" selected="selected">Витрата</option>
    <option value="income">Прибуток</option>
  </select>
</div>

<div>
  <p>Категорія</p>
  <%= select("name", "id", Category.pluck(:name, :id), { include_blank: true }) %>
</div>

<button>Згенерувати</button>
<button>Очистити</button>
<button>Графік</button>
<button>По датам</button>
