<%= form_with url: "/reports/create_form_by_date", method: :get do |f| %>
  <div>
    <label for="date_from">Дата від:</label>
    <input type="date" id="date_from" name="filter[date-from]" value="<%= 1.year.ago.strftime('%Y-%m-%d') %>"  min="2018-01-01" max="2030-12-31">
  </div>

  <div>
    <label for="date_to">Дата по:</label>
    <input type="date" id="date_to" name="filter[date-to]" value="<%= Date.today.strftime('%Y-%m-%d') %>">
  </div>

  <div>
    <button type="submit" class="reset-button btn btn btn-info"> <%= link_to "Очистити", reports_create_report_by_dates_path, {:style=>'', :class => "button-reset"} %></button>
    <%= f.submit "Згенерувати", formaction: reports_report_by_dates_path, :class => 'btn btn-primary'  %>
  </div>
<% end %>
