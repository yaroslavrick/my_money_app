<%= form_with url: "/reports/create_report_by_category", method: :get do |f| %>
  <div class="mb-3">
    <p>Категорія</p>
    <%= select("operation", "category_id", Category.pluck(:name, :id),
               {:prompt => 'Категорія'}) %>
  </div>

  <div class="mt-2">
    <%= render partial: "reports/buttons_accept", locals: {f: f, path: reports_report_by_category_path, reset: reports_create_report_by_category_path} %>
  </div>
<% end %>
