<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div class="add-item">
  <button type="button" class="btn btn-primary mb-2"><%= link_to "New category", new_category_path, class: "button-reset light-text " %></button>
</div>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category %>
    </p>
  <% end %>
</div>

<%= paginate @categories %>

